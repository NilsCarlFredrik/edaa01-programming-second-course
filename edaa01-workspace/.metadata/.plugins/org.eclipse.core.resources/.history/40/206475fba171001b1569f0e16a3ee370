package textproc;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.*;

import javax.swing.JList;



public class BookReaderApplication {

	public static final String[] REGIONS = { "blekinge", "bohuslän", "dalarna", "dalsland", 
			"gotland", "gästrikland", "halland", "hälsingland", "härjedalen", "jämtland", 
			"lappland", "medelpad", "närke", "skåne", "småland", "södermanland", "uppland",
			"värmland", "västerbotten", "västergötland", "västmanland", "ångermanland",
			"öland", "östergötland" };
	
	public static void main(String[] args) throws FileNotFoundException {
		// TODO Auto-generated method stub

		Scanner stopScan = new Scanner(new File("undantagsord.txt"));
		Set<String> stopwords = new HashSet<>();
		while (stopScan.hasNext()) {
			String stopword = stopScan.next().toLowerCase();
			stopwords.add(stopword);
		}
		
		GeneralWordCounter counter = new GeneralWordCounter(stopwords);
		

		Scanner s = new Scanner(new File("nilsholg.txt"));
		s.findWithinHorizon("\uFEFF", 1);
		s.useDelimiter("(\\s|,|\\.|:|;|!|\\?|'|\\\")+"); // se handledning

		while (s.hasNext()) {
			String word = s.next().toLowerCase();
				counter.process(word);
			}
		s.close();
		
		BookReaderController reader = new BookReaderController(counter);
		SortedListModel<Map.Entry<String, Integer>> sortList = new SortedListModel<>(counter.getWordList());
		
		JList list =  new JList(sortList);
		
		
//			new SortedListModel<Map.Entry<String, Integer>>(counter.getWordList());
	}

}
